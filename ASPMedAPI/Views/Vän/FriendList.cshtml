@model IEnumerable<ASPMedAPI.Models.Classes.VänListItem>
@{
    ViewBag.Title = "FriendList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vänner</h2>

@if (!(Model.Count() == 0))
{
    <table class="table">
        <tr>
            <th>
                Förnamn
            </th>
            <th>
                Efternamn
            </th>
            <th></th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item. Förnamn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Efternamn)
                </td>
                <td>
                    @Html.ActionLink("Ta bort", "RemoveFriend", "Vän", new { friendID = item.UserId }, new { })
                </td>
                <td>
                    @Html.ActionLink("Visa profil", "ShowProfile", "Profil", new { showID = item.UserId }, new { })
                </td>
            </tr>
        }

    </table>
}
else
{
   
    <h4>Du har tyvärr inga vänner.</h4>
}

<p>
    @Html.ActionLink("Hitta vänner", "Search", "Profils")
</p>

