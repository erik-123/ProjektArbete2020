@model IEnumerable<ASPMedAPI.Models.Classes.FriendRequestList>
@{
    ViewBag.Title = "IncommingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IncommingList</h2>
@if (!(Model == null))
{
    <table class="table">
        <tr>
            <th>Förnamn</th>
            <th>Efternamn</th>
            <th>Profil</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Förnamn
                </td>
                <td>
                    @item.Efternamn
                </td>
                <td>
                    @Html.ActionLink("» View Profile", "ShowProfile", "Profils",
             new { showID = item.UserId },
             new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Accept", "RequestRespone", "Friend",
             new { requestID = item.FriendRequest_Id, acceptRequest = true }, null)
                    /
                    @Html.ActionLink("Decline", "RequestRespone", "Friend",
             new { requestID = item.FriendRequest_Id, acceptRequest = false }, null)
                </td>
            </tr>
        }
    </table>
}
else
{
       <h3>You have no incomming requests.</h3>
}