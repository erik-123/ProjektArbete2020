@model IEnumerable<ASPMedAPI.Models.Classes.FriendRequestList>
@{
    ViewBag.Title = "Skickade vänförfrågningar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (!(Model == null))
{
    <table class="table">
        <tr>
            <th>Förnamn</th>
            <th>Efternamn</th>
            <th>Profil</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Förnamn
                </td>
                <td>
                    @item.Efternamn
                </td>
                <td>
                    @Html.ActionLink("» View Profile", "ShowProfile", "Profils",
                     new { showID = item.UserId },
                     new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("» Delete", "RemoveRequest", "Friend",
                    new { removeID = item.FriendRequest_Id },
                    new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
}
else
{
    
    <h3>Du har inga skickade vänförfrågningar som väntas på att accepteras</h3>
}