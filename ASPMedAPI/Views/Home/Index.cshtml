            <img src="~/Content/Images/@item.ProfileURL" style="height: auto; max-height: 300px; width: 200px;" class="card-img-top" alt="Profile picture of @Html.DisplayFor(modelItem => item.Förnamn) @Html.DisplayFor(modelItem => item.Efternamn)">
                        <p>@Html.DisplayFor(modelItem => item.Bio)</p>
            @Html.ActionLink("» View Profile", "ShowProfile", "Profils",  
