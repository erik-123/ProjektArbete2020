@model ASPMedAPI.Models.IndexViewModel
@{
    ViewBag.Title = "Hantera konto";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Ändra inställningar</h4>
    <hr />
    <dl>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Byt lösenord", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Skapa lösenord", "SetPassword")
            }
        </dd>


    </dl>
</div>
